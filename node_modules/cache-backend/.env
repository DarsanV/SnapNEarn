# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/cache_db

# JWT Secret
JWT_SECRET=cache_super_secret_jwt_key_for_development_only
JWT_EXPIRE=7d

# App Configuration
APP_NAME=CACHE
APP_URL=http://localhost:3000
REWARD_PERCENTAGE=10

# Optional Services (can be configured later)
# Cloudinary Configuration
# CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
# CLOUDINARY_API_KEY=your_cloudinary_api_key
# CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Google Cloud Vision API
# GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
# GOOGLE_CLOUD_KEY_FILE=path_to_your_service_account_key.json

# Google Maps API
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Twilio Configuration (for SMS)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email Configuration
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_email_password

# Payment Gateway (Stripe)
# STRIPE_SECRET_KEY=your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Police Station API
# POLICE_API_BASE_URL=https://api.police.gov.in
# POLICE_API_KEY=your_police_api_key

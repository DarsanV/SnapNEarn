{
  "name": "cache-us-if-you-can",
  "version": "1.0.0",
  "description": "Road Safety & Rule Enforcement Application",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run mobile:dev\"",
